#!/bin/bash

function speak() {
  echo ""
  echo "$1"
  echo ""
}

function update_php() {
  brew unlink php`php -r "echo substr(str_replace('.', '', phpversion()), 0, 2);"`
  brew upgrade
}

function good() {
  if [ "$1" == "morning" ]; then
    speak "GOOD MORNING YOU ASSHOLE!"

    brew update

    update_php 53
    update_php 54
    update_php 55
    update_php 56

    brew upgrade
    brew cleanup
    brew doctor

    sudo npm update npm -g
    sudo npm update -g

    sudo gem update --system
    sudo gem update

    sudo composer selfupdate
  elif [ "$1" == "night" ]; then
    speak "NO! Your face is a good night!"
    diskutil repairPermissions /
  fi
}
